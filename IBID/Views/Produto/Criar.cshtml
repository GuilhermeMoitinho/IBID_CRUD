@model IBID.Models.ProdutoModel

@{
    ViewData["Title"] = "Criar novo Produto";
}

<h1>Criar novo Produto da IBID</h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
            </div>
           <div class="form-group">
                <label asp-for="DataDeCadastro" class="control-label"></label>
                <input asp-for="DataDeCadastro" type="datetime-local" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr>
<br>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
